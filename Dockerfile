FROM node:13.2-alpine

RUN apk update && apk add --no-cache bash \
        alsa-lib \
        at-spi2-atk \
        atk \
        cairo \
        cups-libs \
        dbus-libs \
        eudev-libs \
        expat \
        flac \
        gdk-pixbuf \
        glib \
        libgcc \
        libjpeg-turbo \
        libpng \
        libwebp \
        libx11 \
        libxcomposite \
        libxdamage \
        libxext \
        libxfixes \
        tzdata \
        libexif \
        udev \
        xvfb \
        zlib-dev \
        chromium \
        chromium-chromedriver

# Create app directory
WORKDIR /usr/src/app

COPY package*.json ./
COPY index.js .

ENV CHROMEDRIVER_SKIP_DOWNLOAD true

RUN npm install --only=production

EXPOSE 3000

CMD [ "node", "index.js" ]
